<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tysoft.api.mapper.system.UserMapper">
    <select id="findUserById" resultType="com.tysoft.entity.system.User">
       select bu.id as id, bu.login_name as userName from bs_user bu where id = #{id}
    </select>
</mapper>